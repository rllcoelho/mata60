<%- model_class = Participante -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:cpf) %>:</strong></dt>
  <dd><%= @participante.cpf %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cep) %>:</strong></dt>
  <dd><%= @participante.cep %></dd>
  <dt><strong><%= model_class.human_attribute_name(:numero_fax) %>:</strong></dt>
  <dd><%= @participante.numero_fax %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
  <dd><%= @participante.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sobrenome) %>:</strong></dt>
  <dd><%= @participante.sobrenome %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              participantes_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_participante_path(@participante), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              participante_path(@participante),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
