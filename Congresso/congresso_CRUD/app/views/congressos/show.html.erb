<%- model_class = Congresso -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:codigo) %>:</strong></dt>
  <dd><%= @congresso.codigo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
  <dd><%= @congresso.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:local) %>:</strong></dt>
  <dd><%= @congresso.local %></dd>
  <dt><strong><%= model_class.human_attribute_name(:dataRealizacao) %>:</strong></dt>
  <dd><%= @congresso.dataRealizacao %></dd>
  <dt><strong><%= model_class.human_attribute_name(:editora) %>:</strong></dt>
  <dd><%= @congresso.editora %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tema) %>:</strong></dt>
  <dd><%= @congresso.tema %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              congressos_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_congresso_path(@congresso), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              congresso_path(@congresso),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
