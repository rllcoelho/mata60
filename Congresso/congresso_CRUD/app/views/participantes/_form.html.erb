<%= form_for @participante, :html => { :class => "form-horizontal participante" } do |f| %>

  <% if @participante.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@participante.errors.count, "error") %> prohibited this participante from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @participante.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :cpf, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :cpf, :class => 'form-control' %>
    </div>
    <%=f.error_span(:cpf) %>
  </div>
  <div class="form-group">
    <%= f.label :cep, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :cep, :class => 'form-control' %>
    </div>
    <%=f.error_span(:cep) %>
  </div>
  <div class="form-group">
    <%= f.label :numero_fax, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :numero_fax, :class => 'form-control' %>
    </div>
    <%=f.error_span(:numero_fax) %>
  </div>
  <div class="form-group">
    <%= f.label :nome, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :nome, :class => 'form-control' %>
    </div>
    <%=f.error_span(:nome) %>
  </div>
  <div class="form-group">
    <%= f.label :sobrenome, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :sobrenome, :class => 'form-control' %>
    </div>
    <%=f.error_span(:sobrenome) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                participantes_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
