<%= form_for @congresso, :html => { :class => "form-horizontal congresso" } do |f| %>

  <% if @congresso.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@congresso.errors.count, "error") %> prohibited this congresso from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @congresso.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :codigo, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :codigo, :class => 'form-control' %>
    </div>
    <%=f.error_span(:codigo) %>
  </div>
  <div class="form-group">
    <%= f.label :nome, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :nome, :class => 'form-control' %>
    </div>
    <%=f.error_span(:nome) %>
  </div>
  <div class="form-group">
    <%= f.label :local, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :local, :class => 'form-control' %>
    </div>
    <%=f.error_span(:local) %>
  </div>
  <div class="form-group">
    <%= f.label :dataRealizacao, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :dataRealizacao, :class => 'form-control' %>
    </div>
    <%=f.error_span(:dataRealizacao) %>
  </div>
  <div class="form-group">
    <%= f.label :editora, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :editora, :class => 'form-control' %>
    </div>
    <%=f.error_span(:editora) %>
  </div>
  <div class="form-group">
    <%= f.label :tema, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :tema, :class => 'form-control' %>
    </div>
    <%=f.error_span(:tema) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                congressos_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
