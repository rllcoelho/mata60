<%= form_for @filme, :html => { :class => "form-horizontal filme" } do |f| %>

  <% if @filme.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@filme.errors.count, "error") %> prohibited this filme from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @filme.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :identificador, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :identificador, :class => 'form-control' %>
    </div>
    <%=f.error_span(:identificador) %>
  </div>
  <div class="form-group">
    <%= f.label :titulo, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :titulo, :class => 'form-control' %>
    </div>
    <%=f.error_span(:titulo) %>
  </div>
  <div class="form-group">
    <%= f.label :duracaoLocacao, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :duracaoLocacao, :class => 'form-control' %>
    </div>
    <%=f.error_span(:duracaoLocacao) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                filmes_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
